<Window x:Class="ThiscordClient.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="319" Width="300" FontSize="14" Background="#36393F">

    
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login/Sign Up" Foreground="Gray" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="Gray"/>
            <TextBox Text="{Binding Username}" Background="#545d6a" Foreground="Gray" FontSize="18" BorderThickness="0"/>
            <Label Content="Password" Foreground="Gray"/>
            <TextBox Text="{Binding Password}" Background="#545d6a" Foreground="Gray" FontSize="18" BorderThickness="0"/>
            <Grid>
                <Button Command="{Binding SignIn}" Content="Submit" Margin="115,10,5,10" Background="#545d6a" Foreground="Gray" FontSize="18"/>
                <Button Command="{Binding SignUp}" Content="Sign Up" Margin="5,10,115,10" Background="#545d6a" Foreground="Gray" FontSize="18"/>
            </Grid>
            <Label Height="20" Width="200" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</Window>

